<!DOCTYPE html>
<html lang="tr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewBag.Title</title>
<!-- Bootstrap CSS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<!-- FontAwesome CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link href="src/Views/Shared/button.scss" rel="stylesheet">
    <link href="src/Views/Shared/required.css" rel="stylesheet">
    <link href="src/Views/Shared/colors.css" rel="stylesheet" >
<style>
   
.account-block {
    padding: 0;
    background-repeat: no-repeat;
    background-size: cover;
    object-fit: cover;
    object-position: center;
    background-position: center;
    background-size: cover;
    
    height: 100%;
    position: relative;
}
.account-block .overlay {
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.4);
}
.account-block .account-testimonial {
    text-align: center;
    color: #fff;
    position: absolute;
    margin: 0 auto;
    padding: 0 1.75rem;
    bottom: 3rem;
    left: 0;
    right: 0;
}

.btn-theme {
    background-color: #5369f8;
    border-color: #5369f8;
    color: #fff;
}

        html, body {
            overflow-x: clip;
        }
  .account-block {
    background-color: #ffffff; /* Example white background */
  }
  
</style>
</head>
<body class="bgColor">
    <nav class="navColor navbar sticky-top navbar-expand-lg bg-body-tertiary pt-5 ps-5 pe-5">
        <div class="container-fluid  ms-0 me-0 ms-sm-2 me-sm-2 ms-md-4 me-md-4 me-lg-5 ms-lg-5">
            @if (User.Identity is not null && User.Identity.IsAuthenticated) {
                <a class="navbar-brand hColor fw-semibold" href="home">WildSports</a>
            } else {
                <a class="navbar-brand hColor fw-semibold" href="/">WildSports</a>
            }
          <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav me-auto">
                    @if(User.Identity is not null && User.Identity.IsAuthenticated) {
                        @if (String.Equals(ViewBag.CurrentUrl, "~/Home/Index")) {
                            <li class="nav-item">
                                <a class="nav-link active hColor fw-medium" aria-current="page" href="home">Home</a>
                            </li>
                        } else {
                            <li class="nav-item">
                                <a class="nav-link hColor fw-medium" href="home">Home</a>
                            </li>                        
                        }
                    } else {
                        @if (String.Equals(ViewBag.CurrentUrl, "~/Home/Index")) {
                            <li class="nav-item">
                                <a class="nav-link active hColor fw-medium" aria-current="page" href="/">Home</a>
                            </li>
                        } else {
                            <li class="nav-item">
                                <a class="nav-link hColor fw-medium" href="/">Home</a>
                            </li>
                        }
                    }

                    

              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Dropdown link
                </a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Action</a></li>
                  <li><a class="dropdown-item" href="#">Another action</a></li>
                  <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
              </li>

            </ul>
                        <ul class="navbar-nav ms-auto ms-lg-0 me-lg-3">
                            <li class="nav-item d-flex align-items-center">

                        @if (User.Identity is not null && User.Identity.IsAuthenticated) {
                            @if (String.Equals(ViewBag.CurrentUrl, "~/Profile/Profile")) {
                                <li>
                                <a asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a>
                                </li>
                            } else {
                            <div class="card" style="min-width: 1.5rem; max-width: 1.5rem; max-height: 1.5rem; aspect-ratio: 1/1; overflow: hidden; object-position: center;">
                               <img src="pp.jpg" class="card-img-top img-fluid" alt="Profil Fotoğrafı" style="height: 100%; object-fit: cover; object-position: center;">
                            </div>
                            <a class="nav-link ms-2 ms-lg-1" href="profile">@User.Identity.Name</a>
                            }
                        } else {
                            @if (String.Equals(ViewBag.CurrentUrl, "~/Account/Login")) {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="login">Login</a>
                            </li>
                            } else {
                            <li class="nav-item">
                                <a class="nav-link" href="login">Login</a>
                            </li>
                            }
                            @if (String.Equals(ViewBag.CurrentUrl, "~/Account/Register")) {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="register">Register</a>
                            </li>
                            } else {
                            <li class="nav-item">
                                <a class="nav-link" href="register">Register</a>
                            </li>
                            }
                        }

                          </li>
                        </ul>                                    
          </div>
        </div>
      </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
